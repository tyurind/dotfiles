[color]
    diff = auto
    status = auto
    branch = auto
    interactive = true
    sh = auto

[core]
    ; autocrlf = false
    ; safecrlf = false
    ; editor = nano
    quotepath = false
    excludesfile = ~/.gitignore

;[gui]
;	fontdiff = -family \"Courier New\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0

[alias]
    cm = commit -m
    ; s = status -sb
    s = status
    ss = status -s
    st = status
    c = checkout
    co = checkout
    ; lg = log -p
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    log = log --stat
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    branch-name = rev-parse --abbrev-ref HEAD
    cmp = "!f(){ git commit \"$@\" && git push origin \"$(git branch-name)\"; }; f"

[giggle]
    main-window-maximized = false
    main-window-geometry = 882x546+0+0
    main-window-view = FileView
    history-view-vpane-position = 284
    file-view-vpane-position = 444

[credential]
    helper = cache --timeout=3600
